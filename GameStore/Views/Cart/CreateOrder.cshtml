@model Order
@{
    Layout = "~/Views/Store/_Layout.cshtml";
}
<h2 class="m-3">Інформація</h2>

<form asp-action="CreateOrder" method="post" class="m-4">
    <div class="form-group">
        <label>Ваше ім'я':</label>
        <input asp-for="CustomerName" class="form-control" />
    </div>
    <div class="form-group">
        <label>Ваша адреса:</label>
        <input asp-for="Address" class="form-control" />
    </div>
    <div class="form-group">
        <label>Ваша область:</label>
        <input asp-for="City" class="form-control" />
    </div>
    <div class="form-group">
        <label>Ваш почтовий індекс:</label>
        <input asp-for="ZipCode" class="form-control" />
    </div>
    <div class="text-center m-2">
        <button type="submit" class="btn btn-primary">Оформити замовлення</button>
        <a asp-action="Index" class="btn btn-secondary">Відміна</a>
    </div>
</form>