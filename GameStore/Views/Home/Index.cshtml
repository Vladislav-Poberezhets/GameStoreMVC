@{
    ViewData["Title"] = "Всі товари";
}
@model IQueryable<Game>

<h3 class="p-2 bg-bg-primary text-white text-center">Товари</h3>
<div class="container">
    <div class="row">
        <div class="col font-weight-bold">Назва</div>
        <div class="col font-weight-bold">Опис</div>
        <div class="col font-weight-bold">Категорія</div>
        <div class="col font-weight-bold">Ціна</div>
        <div class="col"></div>
    </div>
    <form asp-action="AddGames" asp-controller="Home" method="post">
        <div class="row">
            <div class="col">
                <input name="Name" class="form-control" required />
            </div>
            <div class="col">
                <input name="Description" class="form-control" required />
            </div>
            <div class="col">
                <input name="Category" class="form-control" required />
            </div>
            <div class="col">
                <input name="Price" class="form-control" required />
            </div>
            <div class="col">
                <button type="submit" class="btn btn-primary">Добавити</button>
            </div>
        </div>
    </form>
    @if (Model.Count() == 0)
    {
            <div class="row">
                <div class="col text-center p-2">Дані відсутні</div>
            </div>
    }
    else
    {
        @foreach (Game game in Model)
        {
                    <div class="row р-2">
                        <div class="col">@game.Name</div>
                        <div class="col">@game.Description</div>
                        <div class="col text-right">@game.Category</div>
                        <div class="col text-right">@game.Price</div>
                        <div class="col"></div>
                    </div>
        }
    }
</div>
